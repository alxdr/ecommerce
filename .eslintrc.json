{
  "parser": "babel-eslint",
  "env": {
    "browser": true, 
    "node": true
  },
  "plugins": [
    "jest",
    "flowtype"
  ],
  "extends": [
    "airbnb",
    "plugin:jest/recommended",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    // "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}